package game;

/**
 *
 * @author danielcohen
 */
public class Item {
    
    String _name;
    int _hpUp;
    int _atkUp;
    int _defUp;
    
    public Item(String name, int hpUp, int atkUp, int defUp) {
       _name = name;
       _hpUp = hpUp;
       _atkUp = atkUp;
       _defUp = defUp;
    }
    
    public String getItemName(){
        return _name;
    }
    
    public int getHPUp () {
        return _hpUp;
    }
    
    public int getAtkUp() {
        return _atkUp;
    }
    
    public int getDefUp() {
        return _defUp;
    }
    
    public void printItemName() {
        System.out.println(_name);
    }
    
    
    public void printItemStats(){ //wouldn't let me use toString()
        System.out.println("Hp Up:"+ _hpUp + ", Attack up: " + _atkUp + "Defense up: " + _defUp);
        
    }
    
}
