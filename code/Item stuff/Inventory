package game;
import java.util.ArrayList;

/**
 *
 * @author danielcohen
 */
public class Inventory {
    
    
    static Inventory getInstance;
    
    public ArrayList<Item> bag;
    
    int potions;
    int attUps;
    int defUps;
    
    private Inventory () {
    }
    
    public ArrayList getBag() {
        if (bag == null) {
            bag = new ArrayList();
        }
        return bag;
    }
    
    public void addItem(Item item) {
        bag.add(item);
    }
    
     
    
